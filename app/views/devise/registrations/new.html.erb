<div class="container">
  <div class="row ml-3">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2 class="mt-3">Sign up</h2>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <span class="text-danger"><%= render "devise/shared/error_messages", resource: resource %></span>

        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field mt-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mt-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "Sign up", class:"btn btn-sm btn-success" %>
        </div>
      <% end %>
      <div class="mt-3">
         <%= render "devise/shared/links", class:"mt-3" %>
      </div>
    </div>
  </div>
</div>